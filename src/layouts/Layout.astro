---
import { ViewTransitions } from 'astro:transitions';
import { Breadcrumbs } from "astro-breadcrumbs";
import "astro-breadcrumbs/breadcrumbs.scss"
import "../styles/custom-breadcrumbs.scss"
import CodeEditor from '../components/CodeEditor.astro'
import Modal  from '../components/Modal.astro'


let currentPath = Astro.url.pathname;

if (currentPath !== '/' && currentPath.endsWith('/')) {
    currentPath = currentPath.slice(0, -1);
}

const isRoot = currentPath === '/' || currentPath === '/astro-proyect';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" transition:animate="slide">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
		
	</head>
	<body>
		<header>
			<nav class="nav">
				<a href="/astro-proyect/"><img src="/astro-proyect/images/logo_TB_horiz_negativo-01.png" alt="The_bridge" class="logo"></a>
				<ul class="navList">
					<li class="navItem"><a href="/astro-proyect/fundamentals/">Fundamentals</a></li>
					<li class="navItem"><a href="/astro-proyect/backend/">BackEnd</a></li>
					<li class="navItem"><a href="/astro-proyect/frontend/">FrontEnd</a></li>
				</ul>
			</nav>
		</header>
		<div class="back-breadcrumbs">
			{isRoot ? "" : 
				<Breadcrumbs linkTextFormat="capitalized" separatorAriaHidden={false}>
					<svg
						slot="separator"
						xmlns="http://www.w3.org/2000/svg"
						width="24"
						height="24"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<polyline points="9 18 15 12 9 6"></polyline>
					</svg>
				</Breadcrumbs>
			}
		</div>
		<main>
			<slot />
		</main>
		<Modal>
			<CodeEditor/>
	  	</Modal>
	</body>
</html>
<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Krona+One&display=swap');

	:root {
		--accent: 255, 255, 255;
		--accent-light: 239, 51, 64;
		--accent-dark: 0, 0, 0;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent-light)),
			rgb(var(--accent)),
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #2F2F2F;
		background-size: 224px;
	}
	body {
		margin: 0px;
	}
	main {
		width: 1200px;
    	max-width: calc(100% - 2em);
		margin: auto;
		padding: 1rem;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		word-wrap: break-word;
	}
	.preCode {
		position: relative;
		background-color: #24292e;
		padding: 1rem;
		border-radius: 0.5rem;
		white-space: pre-wrap;
    	word-wrap: break-word;
		width: 465px;
		height: 468px;
	}
	code {
		font-family: 'Consolas', 'Roboto', sans-serif;
		background-color: #24292e;
  		padding: 2px 2px;          
  		border-radius: 4px;
	}
	h1 {
		font-family: "Krona One", sans-serif;
		color: #EF3340;
		font-weight: 400;
		font-style: normal;
		line-height: 1;
		text-align: center;
		font-size: 50px;
	}
	h4 {
		margin: 0;
	}
	.nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		gap: 5rem;
		background-color: #232323;
	}
	.navList {
		display: flex;
		list-style: none;
		gap: 40px;
		margin: 0 20px;
	}
	.navItem a {
		text-decoration: none;
		color: white;
		font-size: 1.5rem;
	}
	.navItem a:hover {
		color: #EF3340;
	}
	.btn-back {
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.btn-back:hover {
		cursor: pointer;
	}
	.back-breadcrumbs {
		display: flex;
		gap: 10px;
		align-items: center;
		width: 1200px;
		max-width: calc(100% - 2em);
		height: fit-content;
		margin: 2em auto;
	}
	pre {
		position: relative;
		font-size: 1rem;
		padding: 5px;
		white-space: pre-wrap;
    	word-wrap: break-word;
	}
	.logo {
		width: 16rem;
	}
	.logo img {
		max-width: 100%;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
		padding: 0;
	}
	.pageTitle {
		display: flex;
		gap: 20px;
		margin-bottom: 2em;
		align-items: center;
	}
	.logo_codigo {
		max-width: 10%;
		color:white
	}
	/* Estilo para el bot√≥n de copiar */
	.copy-button {
		position:absolute;
		top: 0.5em;
		right: 0.5em;
		background: #24292e;
		color: white;
		border: none;
		padding: 0.5em 1em;
		cursor: pointer;
		font-size: 0.8em;
		transition: all 0.3s ease;
		z-index: 10;
	}

	.copy-button svg {
		vertical-align: middle;
		margin-right: 0.5em;
	}

	.copy-button:hover {
		background: rgba(0, 0, 0, 0.8);
		border-radius: 5px;
	}

	/*Estilo del modal*/

	.modal_code_result {
		display: flex;
		gap: 2rem;
	}

	.modal_result {
		display: flex;
		flex-direction: column;
	}

	.modal_buttons {
		display: flex;
		gap: 1rem;
		justify-content: flex-end;
	}

	/*Estilo para el boton de probar codigo */
	.test-btn {
		background: #13151a;
		color: white;
		border: none;
		padding: 0.5em 1em;
		cursor: pointer;
		font-size: 0.8em;
		transition: all 0.3s ease;
		border-radius: 5px;
		margin: 5px;
		z-index: 10;
	}
	.test-btn:hover {
		background: rgba(0, 0, 0, 0.8);
	}
	.open-modal {
		display: block;
		position: fixed;
		inset-block-start: 0px;
		inset-block-end: 0px;
		max-width: calc(100% - 2em - 6px);
		max-height: calc(100% - 2em - 6px);
		user-select: text;
		visibility: visible;
		overflow: auto;
		z-index: 999;
	}
	.renderedCodeBox {
		background-color: #24292e;
		width: 428px;
		height: 400px;
		border-radius: 0.5rem;
		border: none;
		margin: 13px 0;
	}

	.language-javascript {
		font-family: 'Consolas', 'Roboto', sans-serif;
	}

	.language-javascript:focus {
		outline: none;
	}
	.executeCode {
		padding: 0.25rem 1rem;
		border-width: 1px;
		border-radius: 3px;
		border-color: #4dacff;
		background-color: #4dacff;
		font-family: 'Consolas', 'Roboto', sans-serif;
		font-size: 1rem;
		font-weight: 400;
		line-height: calc(20 / 16);
		letter-spacing: 0.005em;
		color: #080c11;
		width: 135px;
		height: 45px;
	}

	.executeCode:hover {
		background-color: #92cbff;
		border-color: #92cbff;
		cursor: pointer;
	}

	.restoreCode {
		padding: 0.25rem 1rem;
		border-width: 1px;
		border-radius: 3px;
		border-color: #ff7a4d;
		background-color: #ff7a4d;
		font-family: 'Consolas', 'Roboto', sans-serif;
		font-size: 1rem;
		font-weight: 400;
		line-height: calc(20 / 16);
		letter-spacing: 0.005em;
		color: #080c11;
		width: 135px;
		height: 45px;
	}

	.restoreCode:hover {
		background-color: #ffa292;
		border-color: #ffa292;
		cursor: pointer;
	}

</style>
